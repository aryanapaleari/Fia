<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AuladeSabado.deznet">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="5" BackgroundColor="Gray">
			<StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
				<Entry x:Name="txtlogin" WidthRequest="200" HeightRequest="50" Placeholder="Digite seu Usuario" PlaceholderColor="Navy" TextColor="Red" FontAttributes="Bold" HorizontalTextAlignment="Center"></Entry>
				<Entry x:Name="txtsenha" WidthRequest="200" HeightRequest="50" Placeholder="Digite Sua senha" PlaceholderColor="Navy" TextColor="Red" IsPassword="true" FontAttributes="Bold" HorizontalTextAlignment="Center"></Entry>
			</StackLayout>
			<StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand" > 
				<Button Text="Entrar" Clicked="Handle_Clicked" WidthRequest="100" HeightRequest="50" BackgroundColor="Yellow" TextColor="Black" FontAttributes="Italic"/>
				<Button Text="Recuperar Senha" Clicked="Recuperar_Clicked" WidthRequest="100" HeightRequest="50" BackgroundColor="Yellow" TextColor="Black" FontAttributes="Italic"/>
			</StackLayout>
		</StackLayout>	
	</ContentPage.Content>
</ContentPage>
