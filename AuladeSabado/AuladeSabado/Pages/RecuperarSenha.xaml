<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AuladeSabado.RecuperarSenha">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="5" BackgroundColor="Gray">
				<StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
					<Entry x:Name="Email" WidthRequest="200" HeightRequest="50" Placeholder="Digite seu Email" PlaceholderColor="Navy" TextColor="Red" FontAttributes="Bold" HorizontalTextAlignment="Center"></Entry>
				</StackLayout>
				<StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand" > 
					<Button x:Name="btnENviar" Clicked="cdclick" WidthRequest="100" HeightRequest="50" Text="Enviar" BackgroundColor="Yellow" TextColor="Red"/>
					<Button x:Name="btnCancelar" Clicked="cdclick" WidthRequest="100" HeightRequest="50" Text="Cancelar" BackgroundColor="Yellow" TextColor="Red"/>
				</StackLayout>
			</StackLayout>
	</ContentPage.Content>
</ContentPage>
